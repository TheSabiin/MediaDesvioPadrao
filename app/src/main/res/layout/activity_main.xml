<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/edtAtleta1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Altura Atleta 1"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edtAtleta2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Altura Atleta 2 "
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edtAtleta3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Altura Atleta 3"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edtAtleta4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Altura Atleta 4"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edtAtleta5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Altura Atleta 5"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edtAtleta6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Altura Atleta 6"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="calcular"
        android:text="Calcular media" />

    <TextView
        android:id="@+id/txtMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtDesvio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>